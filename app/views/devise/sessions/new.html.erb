<div class="booyah-box col-xs-10 offset-1">
  <h2>Log in</h2>
  <br><hr>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="booyah-box col-xs-8 offset-2">
      
      <%= f.input :email, required: false, autofocus: true, class: 'form-group form-control' %>
      <%= f.input :password, required: false, class: 'form-group form-control'%>
      <%= f.input :remember_me, as: :boolean, class: 'form-group form-control' if devise_mapping.rememberable? %>
    </div>
    
    <hr><br>

    
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
    
  <% end %>


  <%= render "devise/shared/links" %>
</div>