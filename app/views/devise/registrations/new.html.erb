<div class="booyah-box col-xs-10 offset-1">
  <h2>Sign up</h2>
  <br><hr>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="container">

      <div class="booyah-box col-xs-8 offset-2">
        <%= f.input :email, required: true, autofocus: true, class: 'form-group form-control' %>
        <%= f.input :password, required: true, class: 'form-group form-control', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, class: 'form-group form-control' %>
      </div>
      <hr><br>
    </div>
      <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
